    <script>
        // Mobile menu toggle with improved animation
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            // Add animation class for smooth transition
            if (!mobileMenu.classList.contains('hidden')) {
                mobileMenu.style.animation = 'slideDown 0.3s ease-out';
            }
        });
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!mobileMenuBtn.contains(e.target) && !mobileMenu.contains(e.target)) {
                mobileMenu.classList.add('hidden');
            }
        });
        
        // Enhanced smooth scrolling with offset for fixed nav
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    const offsetTop = target.offsetTop - 80; // Account for fixed nav
                    window.scrollTo({
                        top: offsetTop,
                        behavior: 'smooth'
                    });
                    mobileMenu.classList.add('hidden');
                }
            });
        });
        
        // Enhanced navigation scroll effect with better performance
        let ticking = false;
        function updateNavigation() {
            const nav = document.querySelector('nav');
            if (window.scrollY > 100) {
                nav.classList.add('bg-white/95', 'shadow-lg');
                nav.classList.remove('bg-white/90');
            } else {
                nav.classList.add('bg-white/90');
                nav.classList.remove('bg-white/95', 'shadow-lg');
            }
            ticking = false;
        }
        
        window.addEventListener('scroll', () => {
            if (!ticking) {
                requestAnimationFrame(updateNavigation);
                ticking = true;
            }
        });
        
        let allProducts = [];
        let currentFilter = 'all';
        
        // Load products from Firebase
        async function loadProducts() {
            try {
                const { collection, getDocs, orderBy, query } = window.firestoreModules;
                const productsRef = collection(window.db, 'products');
                const q = query(productsRef, orderBy('createdAt', 'desc'));
                const querySnapshot = await getDocs(q);
                
                allProducts = [];
                querySnapshot.forEach((doc) => {
                    const data = doc.data();
                    allProducts.push({
                        id: doc.id,
                        ...data
                    });
                });
                
                displayProducts(allProducts);
                console.log('[v0] Loaded products:', allProducts.length);
            } catch (error) {
                console.error('[v0] Error loading products:', error);
                showNoProducts();
            }
        }
        
        // Enhanced product display with better error handling
        function displayProducts(products) {
            const container = document.getElementById('products-container');
            const noProductsDiv = document.getElementById('no-products');
            
            if (products.length === 0) {
                showNoProducts();
                return;
            }
            
            noProductsDiv.classList.add('hidden');
            
            container.innerHTML = products.map(product => {
                const badgeClass = getBadgeClass(product.collection);
                const imageUrl = product.images && product.images.length > 0 ? product.images[0] : '/placeholder.svg?height=400&width=400';
                const formattedPrice = parseInt(product.price || 0).toLocaleString('en-IN');
                
                return `
                    <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100">
                         Image Section with Enhanced Overlay 
                        <div class="relative overflow-hidden">
                            <img src="${imageUrl}" 
                                 alt="${product.name || 'Premium Watch'}" 
                                 class="w-full h-80 object-cover transition-all duration-700 group-hover:scale-110"
                                 onerror="this.src='/placeholder.svg?height=400&width=400'">
                            
                             Collection Badge 
                            <div class="absolute top-4 left-4">
                                <span class="badge ${badgeClass} shadow-lg">${product.collection || 'Premium'}</span>
                            </div>
                            
                             Status Badge 
                            ${product.status === 'featured' ? '<div class="absolute top-4 right-4"><span class="badge bg-red-100 text-red-800 shadow-lg">Featured</span></div>' : ''}
                            
                             Professional Overlay with Actions 
                            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500">
                                <div class="absolute bottom-4 left-4 right-4">
                                    <div class="flex gap-2 mb-3">
                                        <button onclick="quickView('${product.id}')" 
                                                class="flex-1 bg-white/95 backdrop-blur-sm text-gray-900 py-2.5 px-4 rounded-lg hover:bg-white transition-all duration-300 text-sm font-semibold shadow-lg">
                                            Quick View
                                        </button>
                                        <button onclick="addToWishlist('${product.id}')" 
                                                class="bg-white/95 backdrop-blur-sm text-gray-900 p-2.5 rounded-lg hover:bg-white transition-all duration-300 shadow-lg">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                                            </svg>
                                        </button>
                                        <button onclick="startVirtualTryOnForProduct('${product.id}')" 
                                                class="bg-yellow-600/95 backdrop-blur-sm text-white p-2.5 rounded-lg hover:bg-yellow-700 transition-all duration-300 shadow-lg">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                            </svg>
                                        </button>
                                    </div>
                                    <div class="text-white text-center">
                                        <p class="text-sm font-medium opacity-90">Premium Quality • Authentic Guarantee</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                         Content Section 
                        <div class="p-6 bg-white">
                             Header 
                            <div class="flex justify-between items-start mb-4">
                                <div class="flex-1">
                                    <h3 class="font-display text-xl font-bold text-gray-900 mb-1 line-clamp-1">${product.name || 'Premium Timepiece'}</h3>
                                    <p class="text-sm text-gray-500 font-medium">${product.brand || 'Premium Brand'} • ${product.model || 'Classic Model'}</p>
                                </div>
                                <div class="text-right ml-4">
                                    <div class="bg-gradient-to-r from-yellow-400 to-yellow-600 text-gray-900 font-bold px-3 py-1.5 rounded-lg text-lg shadow-md">
                                        ₹${formattedPrice}
                                    </div>
                                </div>
                            </div>
                            
                             Description 
                            <p class="text-gray-600 mb-4 line-clamp-2 text-sm leading-relaxed">${product.description || 'Exquisite timepiece crafted with precision and attention to detail. Perfect blend of traditional craftsmanship and modern innovation.'}</p>
                            
                             Specifications Grid 
                            <div class="grid grid-cols-2 gap-3 mb-5">
                                <div class="bg-gray-50 rounded-lg p-3 text-center">
                                    <div class="text-xs text-gray-500 mb-1">Movement</div>
                                    <div class="font-semibold text-gray-900 text-sm">${product.movementType || 'Automatic'}</div>
                                </div>
                                <div class="bg-gray-50 rounded-lg p-3 text-center">
                                    <div class="text-xs text-gray-500 mb-1">Case Material</div>
                                    <div class="font-semibold text-gray-900 text-sm">${product.caseMaterial || 'Steel'}</div>
                                </div>
                            </div>
                            
                             Action Buttons 
                            <div class="flex gap-3">
                                <a href="https://wa.me/919833724525?text=Hi Muzakkir, I'm interested in the ${product.name || 'watch'} (₹${formattedPrice}). Could you share more details about availability, warranty, and payment options?" 
                                   class="flex-1 bg-gray-900 text-white py-3 px-4 rounded-lg hover:bg-gray-800 transition-all duration-300 text-center text-sm font-semibold shadow-lg hover:shadow-xl">
                                    Inquire Now
                                </a>
                                <button onclick="viewProductDetails('${product.id}')" 
                                        class="px-4 py-3 border-2 border-gray-300 rounded-lg hover:border-gray-900 hover:bg-gray-50 transition-all duration-300 text-sm font-semibold">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </button>
                            </div>
                            
                             Trust Indicators 
                            <div class="flex items-center justify-center mt-4 pt-4 border-t border-gray-100">
                                <div class="flex items-center space-x-4 text-xs text-gray-500">
                                    <div class="flex items-center">
                                        <svg class="w-3 h-3 mr-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                        </svg>
                                        <span>Authentic</span>
                                    </div>
                                    <div class="flex items-center">
                                        <svg class="w-3 h-3 mr-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                        </svg>
                                        <span>Warranty</span>
                                    </div>
                                    <div class="flex items-center">
                                        <svg class="w-3 h-3 mr-1 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span>Expert Service</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        // Show no products message
        function showNoProducts() {
            document.getElementById('products-container').innerHTML = '';
            document.getElementById('no-products').classList.remove('hidden');
        }
        
        // Get badge class based on collection
        function getBadgeClass(collection) {
            switch(collection?.toLowerCase()) {
                case 'luxury': return 'badge-luxury';
                case 'sports': return 'badge-sports';
                case 'classic': return 'badge-classic';
                default: return 'badge-classic';
            }
        }
        
        // Filter products by collection
        function filterProducts(filter) {
            currentFilter = filter;
            
            // Update active filter button
            document.querySelectorAll('.collection-filter').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-filter="${filter}"]`).classList.add('active');
            
            // Filter and display products
            const filteredProducts = filter === 'all' 
                ? allProducts 
                : allProducts.filter(product => product.collection?.toLowerCase() === filter.toLowerCase());
            
            displayProducts(filteredProducts);
        }
        
        // Enhanced product details with professional inquiry
        function viewProductDetails(productId) {
            const product = allProducts.find(p => p.id === productId);
            if (product) {
                const specs = [
                    `Brand: ${product.brand || 'Premium Brand'}`,
                    `Model: ${product.model || 'Classic Model'}`,
                    `Price: ₹${parseInt(product.price || 0).toLocaleString('en-IN')}`,
                    `Collection: ${product.collection || 'Premium'}`,
                    `Movement: ${product.movementType || 'Automatic'}`,
                    `Case Material: ${product.caseMaterial || 'Stainless Steel'}`,
                    `Case Size: ${product.caseSize || '42'}mm`,
                    `Water Resistance: ${product.waterResistance || '50'}m`
                ].join('\n');
                
                const message = `Hi Muzakkir,\n\nI'm interested in detailed information about this timepiece:\n\n${product.name || 'Premium Watch'}\n\n${specs}\n\nCould you please provide:\n• Current availability\n• Warranty details\n• Payment options (EMI available?)\n• Best price for immediate purchase\n• Authenticity certificates\n\nThank you for your time and expertise.\n\nBest regards`;
                
                window.open(`https://wa.me/919833724525?text=${encodeURIComponent(message)}`, '_blank');
            }
        }
        
        // Collection filter event listeners
        document.querySelectorAll('.collection-filter').forEach(button => {
            button.addEventListener('click', () => {
                const filter = button.getAttribute('data-filter');
                filterProducts(filter);
            });
        });
        
        // Animate elements on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-fade-in');
                }
            });
        }, observerOptions);
        
        // Observe all sections
        document.querySelectorAll('section').forEach(section => {
            observer.observe(section);
        });
        
        // WhatsApp floating button
        const createFloatingWhatsApp = () => {
            const whatsappBtn = document.createElement('a');
            whatsappBtn.href = 'https://wa.me/919833724525?text=Hi Muzakkir, I\'m interested in your watch collection';
            whatsappBtn.target = '_blank';
            whatsappBtn.className = 'fixed bottom-6 right-6 bg-green-500 text-white p-4 rounded-full shadow-lg hover:bg-green-600 transition-colors z-50';
            whatsappBtn.innerHTML = `
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.864 3.687"/>
                </svg>
            `;
            document.body.appendChild(whatsappBtn);
        };
        
        function quickView(productId) {
            const product = allProducts.find(p => p.id === productId);
            if (product) {
                // Create quick view modal
                const modal = document.createElement('div');
                modal.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4';
                modal.innerHTML = `
                    <div class="bg-white rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
                        <div class="relative">
                            <img src="${product.images?.[0] || '/placeholder.svg?height=400&width=600'}" 
                                 alt="${product.name}" 
                                 class="w-full h-64 object-cover rounded-t-2xl">
                            <button onclick="this.closest('.fixed').remove()" 
                                    class="absolute top-4 right-4 bg-white rounded-full p-2 hover:bg-gray-100">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </button>
                        </div>
                        <div class="p-6">
                            <h3 class="font-display text-2xl font-bold text-gray-900 mb-2">${product.name}</h3>
                            <p class="text-lg text-gray-600 mb-4">${product.brand} ${product.model}</p>
                            <div class="price-tag text-xl mb-4">₹${parseInt(product.price || 0).toLocaleString('en-IN')}</div>
                            <p class="text-gray-600 mb-6">${product.description || 'Premium timepiece with exceptional craftsmanship.'}</p>
                            <a href="https://wa.me/919833724525?text=Hi Muzakkir, I saw the ${product.name} in quick view and I'm very interested. Can we discuss pricing and availability?" 
                               class="w-full bg-gray-900 text-white py-3 px-6 rounded-lg hover:bg-gray-800 transition-colors text-center block">
                                Contact for This Watch
                            </a>
                        </div>
                    </div>
                `;
                document.body.appendChild(modal);
            }
        }

        function addToWishlist(productId) {
            // Simple wishlist functionality
            let wishlist = JSON.parse(localStorage.getItem('helix-wishlist') || '[]');
            if (!wishlist.includes(productId)) {
                wishlist.push(productId);
                localStorage.setItem('helix-wishlist', JSON.stringify(wishlist));
                
                // Show notification
                const notification = document.createElement('div');
                notification.className = 'fixed top-20 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg z-50';
                notification.textContent = 'Added to wishlist!';
                document.body.appendChild(notification);
                
                setTimeout(() => notification.remove(), 3000);
            }
        }

        document.getElementById('startVirtualTryOn').addEventListener('click', async () => {
            const container = document.getElementById('virtualTryOnContainer');
            
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { 
                        width: { ideal: 1280 },
                        height: { ideal: 720 },
                        facingMode: 'user'
                    } 
                });
                
                const video = document.createElement('video');
                video.srcObject = stream;
                video.autoplay = true;
                video.playsInline = true;
                video.className = 'w-full h-full object-cover rounded-2xl';
                
                container.innerHTML = '';
                container.appendChild(video);
                
                // Add AR overlay for watch positioning
                const overlay = document.createElement('div');
                overlay.className = 'absolute inset-0 flex items-center justify-center pointer-events-none';
                overlay.innerHTML = `
                    <div class="bg-black/70 text-white px-6 py-3 rounded-xl backdrop-blur-sm">
                        <div class="flex items-center space-x-2">
                            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                            <span class="text-sm font-medium">Position your wrist in the camera view</span>
                        </div>
                    </div>
                `;
                container.appendChild(overlay);
                
                // Add stop button
                const stopButton = document.createElement('button');
                stopButton.className = 'absolute top-4 right-4 bg-red-600 text-white p-2 rounded-full hover:bg-red-700 transition-colors';
                stopButton.innerHTML = `
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                `;
                stopButton.onclick = () => {
                    stream.getTracks().forEach(track => track.stop());
                    container.innerHTML = `
                        <div class="text-center">
                            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                            </svg>
                            <p class="text-gray-400">Click "Start Virtual Try-On" to begin</p>
                        </div>
                    `;
                };
                container.appendChild(stopButton);
                
            } catch (error) {
                console.error('Camera access error:', error);
                container.innerHTML = `
                    <div class="text-center text-white p-8">
                        <svg class="w-16 h-16 text-red-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                        <h3 class="text-lg font-semibold text-red-400 mb-2">Camera Access Required</h3>
                        <p class="text-gray-400 text-sm mb-4">Please enable camera permissions to use Virtual Try-On</p>
                        <button onclick="document.getElementById('startVirtualTryOn').click()" 
                                class="bg-yellow-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors">
                            Try Again
                        </button>
                    </div>
                `;
            }
        });

        function startVirtualTryOnForProduct(productId) {
            const product = allProducts.find(p => p.id === productId);
            if (product) {
                // Scroll to virtual try-on section
                document.getElementById('virtual-try').scrollIntoView({ behavior: 'smooth' });
                
                // Start virtual try-on after scroll
                setTimeout(() => {
                    document.getElementById('startVirtualTryOn').click();
                }, 1000);
            }
        }

        // Make new functions globally available
        window.startVirtualTryOnForProduct = startVirtualTryOnForProduct;

        async function loadWebsiteStats() {
            try {
                const { collection, getDocs } = window.firestoreModules;
                const statsRef = collection(window.db, 'websiteStats');
                const querySnapshot = await getDocs(statsRef);
                
                if (!querySnapshot.empty) {
                    const statsDoc = querySnapshot.docs[0];
                    const stats = statsDoc.data();
                    
                    document.getElementById('satisfied-customers').textContent = stats.satisfiedCustomers || '1000+';
                    document.getElementById('watches-sold').textContent = stats.watchesSold || '500+';
                    document.getElementById('authentic-guarantee').textContent = stats.authenticGuarantee || '100%';
                    document.getElementById('years-experience').textContent = stats.yearsExperience || '6+';
                }
            } catch (error) {
                console.error('[v0] Error loading website stats:', error);
            }
        }

        // Make new functions globally available
        window.quickView = quickView;
        window.addToWishlist = addToWishlist;

        // Initialize everything when page loads
        window.addEventListener('load', () => {
            createFloatingWhatsApp();
            // Wait for Firebase to initialize
            setTimeout(() => {
                loadProducts();
                loadWebsiteStats(); // Load dynamic statistics
            }, 1000);
        });
    </script>
</body>
</html>
